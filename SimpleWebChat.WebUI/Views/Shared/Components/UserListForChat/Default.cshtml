@model List<SimpleWebChat.Entities.Concrete.User>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
}
<h4 class="text-center">Users</h4>

<ul class="list-group" id="menu">
    @foreach (var item in Model)
    {
        if (item.Id != HttpContextAccessor.HttpContext.Session.GetInt32("userid"))
        {
            <a asp-action="ConversationDetail" asp-controller="Home" asp-route-userid="@HttpContextAccessor.HttpContext.Session.GetInt32("userid")" asp-route-otheruserid="@item.Id">
                <li class="list-group-item justify-content-between wow fadeIn align-items-center mt-1" style="cursor:pointer">

                    @item.Name @item.Surname
                </li>
            </a>
        }
    }
</ul>